<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Admin - Dogecoin News{% endblock %}</title>
        {% block metatags %}{% endblock %}
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap/bootstrap.min.css') }}" rel="stylesheet"/> 
            <link href="{{ asset('css/admin/admin.css') }}" rel="stylesheet"/>
        {% endblock %}
       
        {% block analitycs %}{% endblock %}
        <!-- global url variable -->
        <script>
            var dogeCoinNetUrl = window.location.origin;
        </script>
    </head>
    <body>

        {% block body %}
            <div class="d-flex" id="wrapper">
                {% block admin_menu %}
                    {% include 'private/admin/_admin_menu.html.twig' %}
                {% endblock %}

                {% block page_content_wrapper %}
                    <!-- Page content wrapper-->
                    <div id="page-content-wrapper">
                        <!-- ajax loader -->
                        <div id="loader">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                            </div>
                        </div>
                        <!-- Top navigation-->
                        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                            <div class="container-fluid">
                                <button class="btn btn-outline-dark" id="sidebarToggle">
                                    <i class="fas fa-bars"></i>
                                </button>
                            </div>
                        </nav>
                        <!-- Page content-->
                        <div class="container-fluid">
                            <div class="row">
                                {% block page_content %}{% endblock %}
                            </div>
                        </div>

                        <!-- Page footer -->
                        {% block admin_footer %}
                            {% include 'private/admin/_admin_footer.html.twig' %}
                        {% endblock %}
                    </div>

                {% endblock %}
            </div>
        {% endblock %}

        

        {% block javascripts %}
            <script src="{{ asset('public/js/jquery.js') }}"></script>
            <script src="{{ asset('public/js/popper.js') }}"></script>
            <script src="{{ asset('public/js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('public/icon/font-awesome/faicon.js') }}"></script>
            <script src="{{ asset('public/js/admin/scripts.js') }}"></script>
        {% endblock %}

    </body>
</html>
