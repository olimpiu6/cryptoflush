
{# coin list #}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <h1>Coin market data</h1>
                    {#{ dump(price_list) }#}
                    <table class="table table-striped table-dark table-sm" id="coin_price_list">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Icon</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>24h % change</th>
                                <th>24h volume</th>
                                <th>Graph</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pl in market_data %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>
                                        <img src="{{ pl.string }}" class="coin_icon_32">
                                    </td>
                                    <td>
                                        <strong>{{ pl.coin_ticker | capitalize }}</strong>
                                    </td>
                                    <td>$ {{ pl.current_price }}</td>
                                    <td>
                                        {% if pl.daily_price_change_percentage > 0 %}
                                            <span class="text-success">
                                                {{ pl.daily_price_change_percentage | number_format(2) }}%
                                            </span>
                                        {% elseif pl.daily_price_change_percentage == 0 %}
                                            <span>{{ pl.daily_price_change_percentage | number_format(2) }}%</span>
                                        {% else %}
                                            <span class="text-danger">
                                                {{ pl.daily_price_change_percentage | number_format(2) }}%
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>{{ pl.total_volume | number_format(0,'.', ',') }}</td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



{% block jsplugins %}
    <script src="{{ asset('js/plugin/datatables/datatables.js') }}"></script>
{% endblock %}